manifest {
    mainScript = 'lncRNA-Annotation.nf'
}

params { 
  output = "results/"
} 

process {
    container = 'skptic/lncrna_annotation@sha256:e7792d8d5ed15b0e0a8e9c72615c1014ff8fbb77dfb95bc2d1c73af62eb843ae'
    publishDir = [path: params.output, mode: 'copy', overwrite: 'true']
} 

profiles {
    crg {
        process {
          executor='crg'
          queue='cn-el7'
          memory='32G'
          cpus='4'
          time='24h'
          scratch = true
        }
        docker.enabled = true
        docker.fixOwnership = true
    }
    rth {
        process {
          executor='pbs'
          queue='default'
          memory='64G'
          time='24h'
          clusterOptions='-l nodes=1:ppn=12:alone'
        }
    }
}

